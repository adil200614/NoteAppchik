<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_for_drawer"
    tools:context=".onboard.FirstFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_first"
        android:layout_width="@dimen/lottie2"
        android:layout_height="@dimen/lottie1"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/lottie2"
            android:layout_height="@dimen/lottie1"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/design" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/propusk"
        android:layout_width="@dimen/propu1"
        android:layout_height="@dimen/propu2"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/propustin"
        android:fontFamily="@font/poppins_light"
        android:text="@string/propu3"
        android:textColor="@color/orange" />



        <TextView
            android:layout_width="@dimen/func"
            android:layout_height="@dimen/funcsions"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_light"
            android:text="@string/funcsions"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/paddig_24"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/funcsions2"/>



</FrameLayout>